<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mark Student Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Google Material Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/css/bootstrap-datepicker.min.css"
        rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="/js/facultyheader.js" defer></script>
    <script src="/js/mark_attendance.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/js/bootstrap-datepicker.min.js"></script>

    <link rel="stylesheet" href="/css/table_style.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;400&display=swap');

        body {
            margin: 0;
            padding: 0;
        }

        .container {
            margin-left: 15px !important;
            margin-right: 15px !important;
        }

        .table-responsive {
            width: 95vw !important;
        }

        h2 {
            color: #4d44b5 !important;
        }

        i {
            cursor: pointer;
            color: #4d44b5 !important;
        }

        /* Style for the submit button */
        .submit-button {
            position: fixed;
            bottom: 20px;
            /* Adjust the distance from the bottom as needed */
            left: 45vw;
            /* Adjust the distance from the left as needed */
            z-index: 999;
            /* Ensure it's above other content */
            background-color: #4d44b5 !important;
        }

        .form-control {
            width: 140px !important;
        }

        .form-group {
            display: flex;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        label {
            margin-right: 20px;
        }

        button {
            color: white !important;
            border: none;
            background: none;
            outline: none;
        }

        #goBackButton {
            background-color: rgb(255, 255, 255) !important;
            color: #4d44b5 !important;
            border-radius: 0px !important;
        }

        #goBackButton {
            display: flex;
            align-items: center;
            /* Vertically center items within the button */
        }

        .material-icons {
            margin-right: 8px;
            /* Adjust the spacing between the icon and the text as needed */
        }
    </style>
</head>

<body>
    <button id="goBackButton" style="display: flex !important;">
        <i class="material-icons">arrow_back</i>
        <h1 class="mt-4 mb-4">Search Faculty Details</h1>
    </button>

    <form action="/faculty/savemarkattendance" method="post" <div class="container">
        <!-- <h2>
            <a href="./index.html"><i class="material-icons">arrow_back</i></a> Mark Student Attendance
        </h2> -->


        <div class="table-responsive">
            <table class="table table-light table-striped">
                <thead>
                    <tr>
                        <th scope="col">Enroll</th>
                        <th scope="col">Name</th>
                        <th scope="col">Present</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Your table content here -->
                    <% Data.forEach(d=> {%>
                        <tr>
                            <th scope="row">
                                <%= d.Enrollment_No %>
                            </th>
                            <td>
                                <%= d.Name %>
                            </td>

                            <td>
                                <input type="radio" id="attendanceradio" value="0" name="<%=d.Enrollment_No %>">
                                <label for=" <%=d.Enrollment_No %>">Present</label>
                            </td>


                        </tr>
                        <% }); %>
                            <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
        </div>

        <!-- Submit button -->
        <button class="btn btn-primary submit-button">Submit</button>
    </form>
    <script>
        var radio = document.getElementById("attendanceradio");

        // Add a click event listener to toggle the value and radio state
        radio.addEventListener("click", function () {
            if (radio.value === "1") {
                radio.value = "0";
                radio.checked = true;
                // radio.nextSibling.textContent = " Absent";
            } else {
                radio.value = "1";
                radio.checked = false;
                // radio.nextSibling.textContent = " Present";
            }
        });
    </script>


    <script>
        function goBack() {
            window.history.back();
        }

        const backButton = document.getElementById("goBackButton");
        backButton.addEventListener("click", goBack);
    </script>
</body>

</html>